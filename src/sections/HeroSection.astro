---

<section class="min-h-screen relative overflow-hidden flex flex-col px-4 sm:px-6 lg:px-8 py-12 sm:py-16">
    <!-- Background Orbs -->
    <div class="absolute inset-0 pointer-events-none">
        <div class="absolute w-72 h-72 bg-gradient-to-r from-[#8b5cf6]/10 to-[#7c3aed]/10 rounded-full blur-3xl top-10 right-10 animate-pulse"></div>
        <div class="absolute w-48 h-48 bg-gradient-to-r from-[#7c3aed]/10 to-[#5b21b6]/10 rounded-full blur-3xl bottom-20 left-5 animate-pulse" style="animation-delay: 2s;"></div>
        <div class="absolute w-36 h-36 bg-gradient-to-r from-[#8b5cf6]/10 to-[#7c3aed]/10 rounded-full blur-3xl top-1/2 left-2/3 animate-pulse" style="animation-delay: 4s;"></div>
    </div>

    <!-- Main Hero Content -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center flex-1 relative z-10 max-w-7xl mx-auto w-full">
        <!-- Left Side - Main Content -->
        <div class="flex flex-col space-y-6">
            <!-- Status Badge -->
            <div class="flex items-center gap-2 px-4 py-2 bg-[#8b5cf6]/10 border border-[#8b5cf6]/30 rounded-full w-fit">
                <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
                <span class="font-roboto-mono text-sm text-gray-300">Available for new projects</span>
            </div>

            <!-- Main Title -->
            <div>
                <h1 class="font-ibrand text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-white leading-tight sm:leading-none">
                    <span class="block">Crafting</span>
                    <span class="block bg-gradient-to-r from-[#8b5cf6] via-[#7c3aed] to-[#5b21b6] bg-clip-text text-transparent">Digital</span>
                    <span class="block">Experiences</span>
                </h1>
                <div class="h-1 bg-gradient-to-r from-[#8b5cf6] to-[#7c3aed] rounded-full w-24 sm:w-32 mt-3"></div>
            </div>

            <!-- Subtitle -->
            <div class="max-w-lg">
                <p class="font-roboto-mono text-base sm:text-lg text-gray-300 leading-relaxed">
                    Full-stack developer turning 
                    <span class="text-[#8b5cf6] font-semibold">complex ideas</span> 
                    into 
                    <span class="text-[#8b5cf6] font-semibold">elegant solutions</span>
                    that drive real business impact.
                </p>
            </div>

            <!-- CTA Buttons - Moved up -->
            <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 items-stretch sm:items-center pt-4">
                <button class="flex items-center justify-center gap-2 px-4 sm:px-6 py-3 bg-gradient-to-r from-[#8b5cf6] to-[#7c3aed] text-white rounded-lg font-ibrand font-semibold hover:from-[#7c3aed] hover:to-[#5b21b6] hover:shadow-lg hover:shadow-[#8b5cf6]/30 hover:-translate-y-1 transition-all duration-300">
                    <span>View My Work</span>
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path d="M7 17L17 7M17 7H7M17 7V17"/>
                    </svg>
                </button>
                <button class="px-4 sm:px-6 py-3 bg-transparent border-2 border-[#8b5cf6] text-[#8b5cf6] rounded-lg font-ibrand font-semibold hover:bg-[#8b5cf6] hover:text-white hover:-translate-y-1 transition-all duration-300 text-center">
                    Let's Talk
                </button>
            </div>

            <!-- Stats Row - Compact -->
            <div class="flex items-center  gap-2 sm:gap-4 p-3 bg-gray-900/30 rounded-lg border border-[#8b5cf6]/10 backdrop-blur-sm w-fit max-w-full overflow-x-auto">
                <div class="flex items-center gap-1 flex-shrink-0">
                    <span class="font-ibrand text-lg sm:text-xl font-bold text-[#8b5cf6]">50+</span>
                    <span class="font-roboto-mono text-xs text-gray-400">Projects</span>
                </div>
                <div class="w-px h-6 bg-[#8b5cf6]/30 flex-shrink-0"></div>
                <div class="flex items-center gap-1 flex-shrink-0">
                    <span class="font-ibrand text-lg sm:text-xl font-bold text-[#8b5cf6]">3+</span>
                    <span class="font-roboto-mono text-xs text-gray-400">Years</span>
                </div>
                <div class="w-px h-6 bg-[#8b5cf6]/30 flex-shrink-0"></div>
                <div class="flex items-center gap-1 flex-shrink-0">
                    <span class="font-ibrand text-lg sm:text-xl font-bold text-[#8b5cf6]">100%</span>
                    <span class="font-roboto-mono text-xs text-gray-400">Happy</span>
                </div>
            </div>
        </div>

        <!-- Right Side - Code Window -->
        <div class="flex justify-center items-center mt-8 lg:mt-0">
            <div class="bg-gray-900/90 rounded-xl border border-[#8b5cf6]/30 overflow-hidden w-full max-w-sm sm:max-w-md lg:w-96 backdrop-blur-sm shadow-2xl">
                <!-- Window Header -->
                <div class="flex items-center justify-between p-4 bg-gray-800/80 border-b border-[#8b5cf6]/20">
                    <div class="flex gap-2">
                        <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                        <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                        <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                    </div>
                    <span class="font-roboto-mono text-sm text-gray-400">portfolio.tsx</span>
                </div>
                
                <!-- Code Content -->
                <div class="p-6 font-mono text-sm">
                    <div class="flex items-center mb-2">
                        <span class="text-gray-500 mr-4 w-4 text-right">1</span>
                        <span class="text-purple-400">const</span>
                        <span class="text-red-400 ml-2">developer</span>
                        <span class="text-blue-400 ml-2">=</span>
                        <span class="text-yellow-400 ml-2">&#123;</span>
                    </div>
                    <div class="flex items-center mb-2">
                        <span class="text-gray-500 mr-4 w-4 text-right">2</span>
                        <span class="text-blue-300 ml-4">name</span>
                        <span class="text-blue-400">:</span>
                        <span class="text-green-400 ml-2">"Jair"</span>
                        <span class="text-blue-400">,</span>
                    </div>
                    <div class="flex items-center mb-2">
                        <span class="text-gray-500 mr-4 w-4 text-right">3</span>
                        <span class="text-blue-300 ml-4">skills</span>
                        <span class="text-blue-400">:</span>
                        <span class="text-yellow-400 ml-2">&#91;</span>
                        <span class="text-green-400">"React"</span>
                        <span class="text-blue-400">,</span>
                        <span class="text-green-400 ml-1">"Node.js"</span>
                        <span class="text-yellow-400">&#93;</span>
                        <span class="text-blue-400">,</span>
                    </div>
                    <div class="flex items-center mb-2">
                        <span class="text-gray-500 mr-4 w-4 text-right">4</span>
                        <span class="text-blue-300 ml-4">passion</span>
                        <span class="text-blue-400">:</span>
                        <span class="text-green-400 ml-2">"Building amazing things"</span>
                    </div>
                    <div class="flex items-center mb-2">
                        <span class="text-gray-500 mr-4 w-4 text-right">5</span>
                        <span class="text-yellow-400">&#125;</span>
                    </div>
                    <div class="w-0.5 h-5 bg-[#8b5cf6] animate-pulse ml-auto mt-2"></div>
                </div>
            </div>
    </div>
    </div>
     
    <!-- Bottom Section -->
    <div class="flex justify-center items-center mt-16 relative z-10">
        <div class="flex flex-col items-center gap-2">
            <span class="font-roboto-mono text-sm text-gray-400">Scroll to explore</span>
            <svg class="w-6 h-6 text-[#8b5cf6] animate-bounce" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path d="M7 13L12 18L17 13M7 6L12 11L17 6"/>
            </svg>
        </div>
</div>
</section>

<style>
    .font-ibrand {
        font-family: "Ibrand", var(--font-sans);
        font-weight: 500;
    }

    .font-sink {
        font-family: "Sink", var(--font-sans);
    }
</style>
