---
import { clientProjects, personalProjects } from '../data/projects.ts';
import ProjectModal from '../components/ProjectModal.astro';
---

<section id="projects" class="min-h-screen px-8 py-16">
    <div class="max-w-7xl mx-auto">
        <!-- Header Section -->
        <div class="flex flex-col items-center mb-16 text-center">
        <h1 class="font-roboto-mono text-xl sm:text-2xl md:text-3xl font-bold text-white mb-2">
            CLIENT-LED
        </h1>
        <h2 class="font-ibrand fake-bold tracking-widest text-5xl sm:text-6xl md:text-[4rem] font-bold uppercase text-white">
            <strong>OUTCOMES</strong>
        </h2>
        <p class="font-roboto-mono text-gray-400 text-center max-w-2xl mt-4">
            Transforming ideas into digital solutions that drive real business results and user engagement
        </p>
    </div>

    <!-- Projects Grid -->
    <div class="max-w-7xl mx-auto">
        <!-- Client Projects -->
        <div class="mb-16">
            <div class="flex items-center mb-8">
                <div class="flex items-center gap-3">
                    <div class="w-3 h-3 bg-gradient-to-r from-[#8b5cf6] to-[#7c3aed] rounded-full"></div>
                    <h3 class="font-roboto-mono text-xl font-bold text-white">Client Projects</h3>
                </div>
                <div class="flex-1 h-px bg-gradient-to-r from-[#8b5cf6]/50 to-transparent ml-6"></div>
            </div>
            
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                {clientProjects.map((project) => (
                    <div class="group bg-gradient-to-br from-[#2a2a2a] to-[#1a1a1a] rounded-xl p-6 border border-[#404040] hover:border-[#8b5cf6]/50 transition-all duration-300 hover:shadow-xl hover:shadow-[#8b5cf6]/10">
                        <!-- Project Header -->
                        <div class="flex justify-between items-start mb-4">
                            <div>
                                <h4 class="font-lato text-lg font-bold text-white mb-1">{project.title}</h4>
                                <p class="font-roboto-mono text-sm text-[#8b5cf6]">{project.client}</p>
                            </div>
                            <div class="flex flex-col items-end">
                                <span class="px-3 py-1 bg-[#8b5cf6]/20 rounded-full text-xs font-roboto-mono text-[#8b5cf6] border border-[#8b5cf6]/40">
                                    {project.status}
                                </span>
                                <span class="text-xs text-gray-400 mt-1">{project.year}</span>
                            </div>
                        </div>

                        <!-- Description -->
                        <p class="font-roboto-mono text-sm text-gray-300 mb-4 leading-relaxed">
                            {project.description}
                        </p>

                        <!-- Impact -->
                        <div class="bg-gradient-to-r from-[#8b5cf6]/10 to-[#5b21b6]/10 rounded-lg p-3 mb-4">
                            <p class="font-roboto-mono text-xs text-gray-400 mb-1">Impact</p>
                            <p class="font-roboto-mono text-sm font-bold text-[#8b5cf6]">{project.impact}</p>
                        </div>

                        <!-- Technologies -->
                        <div class="flex flex-wrap gap-2 mb-4">
                            {project.technologies.map((tech) => (
                                <span class="px-2 py-1 bg-[#404040] rounded text-xs font-roboto-mono text-gray-300">
                                    {tech}
                                </span>
                            ))}
                        </div>

                        <!-- Buttons -->
                        <div class="flex gap-2">
                            <button 
                                class="cursor-pointer flex-1 bg-transparent border border-[#8b5cf6] text-[#8b5cf6] py-2 rounded-lg font-roboto-mono text-sm font-semibold hover:bg-[#8b5cf6] hover:text-white transition-all duration-300 group-hover:shadow-lg group-hover:shadow-[#8b5cf6]/20"
                                onclick={`openProjectModal(${project.id})`}
                            >
                                Quick View
                            </button>
                            <a 
                                href={`/projects/${project.id}`}
                                class="px-4 bg-[#8b5cf6]/20 border border-[#8b5cf6]/40 text-[#8b5cf6] py-2 rounded-lg font-roboto-mono text-sm font-semibold hover:bg-[#8b5cf6]/30 transition-all duration-300 flex items-center justify-center"
                                title="View full case study"
                            >
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                ))}
            </div>
        </div>

        <!-- Personal Projects -->
        <div>
            <div class="flex items-center mb-8">
                <div class="flex items-center gap-3">
                    <div class="w-3 h-3 bg-gradient-to-r from-[#7c3aed] to-[#5b21b6] rounded-full"></div>
                    <h3 class="font-roboto-mono text-xl font-bold text-white">Personal Projects</h3>
                </div>
                <div class="flex-1 h-px bg-gradient-to-r from-[#7c3aed]/50 to-transparent ml-6"></div>
            </div>
            
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                {personalProjects.map((project) => (
                    <div class="group bg-gradient-to-br from-[#2a2a2a] to-[#1a1a1a] rounded-xl p-6 border border-[#404040] hover:border-[#7c3aed]/50 transition-all duration-300 hover:shadow-xl hover:shadow-[#7c3aed]/10">
                        <!-- Project Header -->
                        <div class="flex justify-between items-start mb-4">
                            <div>
                                <h4 class="font-lato text-lg font-bold text-white mb-1">{project.title}</h4>
                                <p class="font-roboto-mono text-sm text-[#7c3aed]">{project.type}</p>
                            </div>
                            <div class="flex flex-col items-end">
                                <span class="px-3 py-1 bg-[#7c3aed]/20 rounded-full text-xs font-roboto-mono text-[#7c3aed] border border-[#7c3aed]/40">
                                    {project.status}
                                </span>
                                <span class="text-xs text-gray-400 mt-1">{project.year}</span>
                            </div>
                        </div>

                        <!-- Description -->
                        <p class="font-roboto-mono text-sm text-gray-300 mb-4 leading-relaxed">
                            {project.description}
                        </p>

                        <!-- Link -->
                        <div class="bg-gradient-to-r from-[#7c3aed]/10 to-[#5b21b6]/10 rounded-lg p-3 mb-4">
                            <p class="font-roboto-mono text-xs text-gray-400 mb-1">
                                {'Live Demo'}
                            </p>
                            <p class="font-roboto-mono text-sm font-bold text-[#7c3aed]">
                                {project.demo}
                            </p>
                        </div>

                        <!-- Technologies -->
                        <div class="flex flex-wrap gap-2 mb-4">
                            {project.technologies.map((tech) => (
                                <span class="px-2 py-1 bg-[#404040] rounded text-xs font-roboto-mono text-gray-300">
                                    {tech}
                                </span>
                            ))}
                        </div>

                        <!-- Action Buttons -->
                        <div class="flex gap-2">
                            <button 
                                class="cursor-pointer flex-1 bg-transparent border border-[#7c3aed] text-[#7c3aed] py-2 rounded-lg font-roboto-mono text-sm font-semibold hover:bg-[#7c3aed] hover:text-white transition-all duration-300"
                                onclick={`openProjectModal(${project.id})`}
                            >
                                Quick View
                            </button>
                            <a 
                                href={`/projects/${project.id}`}
                                class="px-4 bg-[#7c3aed]/20 border border-[#7c3aed]/40 text-[#7c3aed] py-2 rounded-lg font-roboto-mono text-sm font-semibold hover:bg-[#7c3aed]/30 transition-all duration-300 flex items-center justify-center"
                                title="View full case study"
                            >
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                </svg>
                            </a>
                            {project.github && (
                                <a 
                                    class="px-4 bg-[#7c3aed]/20 border border-[#7c3aed]/40 text-[#7c3aed] py-2 rounded-lg font-roboto-mono text-sm font-semibold hover:bg-[#7c3aed]/30 transition-all duration-300 flex items-center justify-center"
                                    href={project.github} 
                                    target="_blank" 
                                    rel="noopener noreferrer" 
                                    aria-label="GitHub"
                                >
                                    <svg viewBox="0 0 24 24" width="18" height="18" aria-hidden="true" fill="currentColor">
                                        <path d="M12 .5a11.5 11.5 0 0 0-3.64 22.42c.58.11.8-.25.8-.56 0-.28-.01-1.02-.02-2-3.26.71-3.95-1.57-3.95-1.57-.53-1.35-1.3-1.71-1.3-1.71-1.06-.73.08-.72.08-.72 1.17.08 1.78 1.2 1.78 1.2 1.04 1.78 2.73 1.27 3.4.97.11-.75.41-1.27.74-1.56-2.6-.29-5.34-1.3-5.34-5.77 0-1.27.46-2.31 1.2-3.13-.12-.3-.52-1.5.11-3.12 0 0 .98-.31 3.2 1.2a11.1 11.1 0 0 1 5.82 0c2.22-1.51 3.2-1.2 3.2-1.2.63 1.62.24 2.82.12 3.12.75.82 1.2 1.86 1.2 3.13 0 4.48-2.75 5.48-5.37 5.77.42.36.8 1.06.8 2.14 0 1.54-.01 2.78-.01 3.16 0 .31.21.68.81.56A11.5 11.5 0 0 0 12 .5Z"/>
                                    </svg>
                                </a>
                            )}
                        </div>
                    </div>
                ))}
            </div>
        </div>

        <!-- Call to Action -->
        <div class="text-center mt-16">
            <div class="bg-gradient-to-r from-[#8b5cf6]/10 to-[#5b21b6]/10 rounded-2xl p-8 border border-[#8b5cf6]/30 backdrop-blur-sm">
                <h3 class="font-lato text-2xl font-bold text-white mb-4">Ready to Start Your Project?</h3>
                <p class="font-roboto-mono text-gray-300 mb-6 max-w-2xl mx-auto">
                    Let's collaborate to bring your ideas to life with cutting-edge technology and innovative solutions.
                </p>
                <div class="flex justify-center gap-4">
                    <button class="bg-gradient-to-r from-[#8b5cf6] to-[#7c3aed] text-white px-8 py-3 rounded-lg font-roboto-mono font-semibold hover:from-[#7c3aed] hover:to-[#5b21b6] hover:shadow-lg hover:shadow-[#8b5cf6]/30 transition-all duration-300">
                        Start a Project
                    </button>
                    <button class="border-2 border-[#8b5cf6] text-[#8b5cf6] px-8 py-3 rounded-lg font-roboto-mono font-semibold hover:bg-[#8b5cf6] hover:text-white transition-all duration-300">
                        View All Work
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modals -->
    {clientProjects.map((project) => (
        <ProjectModal project={project} />
    ))}
    {personalProjects.map((project) => (
        <ProjectModal project={project} />
    ))}
</section>

<script>
    import { allProjects } from '../data/projects.ts';

    (window as any).projectsData = allProjects;

    function openProjectModal(projectId: number) {
        const modal = document.querySelector(`[data-project-id="${projectId}"]`) as HTMLElement;
        if (modal) {
            modal.classList.add('show');
            document.body.style.overflow = 'hidden';
        }
    }

    function closeProjectModal(projectId: number) {
        const modal = document.querySelector(`[data-project-id="${projectId}"]`) as HTMLElement;
        if (modal) {
            modal.classList.remove('show');
            document.body.style.overflow = '';
        }
    }

    function closeAllModals() {
        const modals = document.querySelectorAll('.project-modal');
        modals.forEach(modal => {
            (modal as HTMLElement).classList.remove('show');
        });
        document.body.style.overflow = '';
    }

    (window as any).openProjectModal = openProjectModal;
    (window as any).closeProjectModal = closeProjectModal;
    (window as any).closeAllModals = closeAllModals;

    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.project-modal').forEach(modal => {
            const backdrop = modal.querySelector('.absolute.inset-0');
            const closeBtn = modal.querySelector('button[aria-label="Close modal"]');
            
            if (backdrop) {
                backdrop.addEventListener('click', (e) => {
                    if (e.target === backdrop) {
                        const projectId = modal.getAttribute('data-project-id');
                        if (projectId) {
                            closeProjectModal(parseInt(projectId));
                        }
                    }
                });
            }

            if (closeBtn) {
                closeBtn.addEventListener('click', () => {
                    const projectId = modal.getAttribute('data-project-id');
                    if (projectId) {
                        closeProjectModal(parseInt(projectId));
                    }
                });
            }
        });

        // Close modal with Esc 
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeAllModals();
            }
        });
    });
</script>

<style>
    .font-ibrand {
        font-family: "Ibrand", var(--font-sans);
        font-weight: 500;
    }

    .font-sink {
        font-family: "Sink", var(--font-sans);
    }
</style>
