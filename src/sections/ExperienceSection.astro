---
import ExperienceCard from '../components/ExperienceCard.astro';

const experienceData = {
    title: "Full-Stack Development Experience",
    company: "Setca Soft",
    role: "Junior Full-Stack Developer",
    period: "2024 - 2025",
    description: "Led development of enterprise-grade applications including offline-first mobile solutions and comprehensive web platforms for inventory, CRM, and business management.",
    achievements: [
        {
            label: "Mobile App Performance Optimization",
            percentage: 85
        },
        {
            label: "Web Platform User Engagement",
            percentage: 92
        },
        {
            label: "Order Processing Efficiency",
            percentage: 48
        },
        {
            label: "Inventory Management Accuracy",
            percentage: 78
        },
        {
            label: "CRM Customer Satisfaction",
            percentage: 88
        },
        {
            label: "Product Line Management",
            percentage: 65
        }
    ],
    technologies: [
        "Flutter",
        "React",
        "Angular",
        "Node.js",
        "TypeScript",
        "SQLite",
        "PostgreSQL",
        "REST APIs",
        "Git",
        "Agile/Scrum"
    ],
    buttonText: "View Full Experience"
};
---
<section id="experience" class="min-h-screen px-8 py-16">
    <div class="max-w-7xl mx-auto">
        <div class="flex flex-col lg:flex-row items-start lg:items-center justify-between gap-12 lg:gap-16">
            <div class="flex flex-col w-full lg:w-[60%]">
        <!-- Section Header -->
        <div class="mb-8">
            <div class="flex items-center gap-3 mb-4">
                <div class="w-3 h-3 bg-gradient-to-r from-[#8b5cf6] to-[#7c3aed] rounded-full"></div>
                <h1 class="font-ibrand text-3xl font-bold text-white">Professional Journey</h1>
            </div>
            <p class="font-roboto-mono text-lg text-gray-300 leading-relaxed max-w-2xl">
                Transforming business challenges into scalable digital solutions through 
                <span class="text-[#8b5cf6] font-semibold">full-stack development</span> and 
                <span class="text-[#8b5cf6] font-semibold">cross-platform expertise</span>.
            </p>
        </div>

        <!-- Experience Card -->
        <ExperienceCard
            title={experienceData.title}
            company={experienceData.company}
            role={experienceData.role}
            period={experienceData.period}
            description={experienceData.description}
            achievements={experienceData.achievements}
            technologies={experienceData.technologies}
            buttonText={experienceData.buttonText}
        />
    </div>
            <div class="flex flex-col w-full lg:w-[40%] justify-center items-center">
        <h1 class="font-roboto-mono text-3xl md:text-3xl font-bold">IMPACT-LED</h1>
        <h2 class="font-ibrand fake-bold tracking-widest text-[4rem] md:text-[4rem] font-bold uppercase"><strong>EXPERIENCE</strong></h2>
        
        <!-- Professional Highlights - Expanded -->
        <div class="mt-8 w-full max-w-xl mx-auto space-y-6">
            <!-- Core Competencies -->
            <div class="bg-gradient-to-br from-[#8b5cf6]/10 to-[#5b21b6]/10 rounded-2xl p-4 lg:p-6 backdrop-blur-sm border border-[#8b5cf6]/20">
                <div class="flex items-center gap-2 mb-4">
                    <div class="w-2 h-2 bg-[#8b5cf6] rounded-full"></div>
                    <h3 class="font-roboto-mono text-sm font-bold text-white uppercase tracking-wide">Core Competencies</h3>
                </div>
                
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 lg:gap-4">
                    <div class="space-y-2 lg:space-y-3">
                        <div class="flex items-center justify-between p-3 bg-gray-900/30 rounded-lg">
                            <span class="font-roboto-mono text-xs text-gray-300">Full-Stack Architecture</span>
                            <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                        </div>
                        <div class="flex items-center justify-between p-3 bg-gray-900/30 rounded-lg">
                            <span class="font-roboto-mono text-xs text-gray-300">Cross-Platform Development</span>
                            <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                        </div>
                        <div class="flex items-center justify-between p-3 bg-gray-900/30 rounded-lg">
                            <span class="font-roboto-mono text-xs text-gray-300">Database Design & Optimization</span>
                            <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                        </div>
                    </div>
                    <div class="space-y-2 lg:space-y-3">
                        <div class="flex items-center justify-between p-3 bg-gray-900/30 rounded-lg">
                            <span class="font-roboto-mono text-xs text-gray-300">API Development & Integration</span>
                            <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                        </div>
                        <div class="flex items-center justify-between p-3 bg-gray-900/30 rounded-lg">
                            <span class="font-roboto-mono text-xs text-gray-300">Agile/Scrum Methodologies</span>
                            <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                        </div>
                        <div class="flex items-center justify-between p-3 bg-gray-900/30 rounded-lg">
                            <span class="font-roboto-mono text-xs text-gray-300">Performance Optimization</span>
                            <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Key Metrics -->
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-3 lg:gap-4">
                <div class="bg-gradient-to-br from-[#2a2a2a] to-[#1a1a1a] rounded-xl p-4 lg:p-5 border border-[#8b5cf6]/20 text-center">
                    <p class="text-xl lg:text-2xl font-bold text-[#8b5cf6] font-ibrand">8+</p>
                    <p class="text-xs text-gray-400 font-roboto-mono">Enterprise Projects</p>
                </div>
                <div class="bg-gradient-to-br from-[#2a2a2a] to-[#1a1a1a] rounded-xl p-4 lg:p-5 border border-[#7c3aed]/20 text-center">
                    <p class="text-xl lg:text-2xl font-bold text-[#7c3aed] font-ibrand">95%</p>
                    <p class="text-xs text-gray-400 font-roboto-mono">Code Coverage</p>
                </div>
                <div class="bg-gradient-to-br from-[#2a2a2a] to-[#1a1a1a] rounded-xl p-4 lg:p-5 border border-[#5b21b6]/20 text-center">
                    <p class="text-xl lg:text-2xl font-bold text-[#5b21b6] font-ibrand">16mo</p>
                    <p class="text-xs text-gray-400 font-roboto-mono">Experience</p>
                </div>
            </div>

            <!-- Professional Achievements -->
            <div class="bg-gradient-to-br from-[#7c3aed]/10 to-[#8b5cf6]/10 rounded-2xl p-4 lg:p-6 backdrop-blur-sm border border-[#7c3aed]/20">
                <div class="flex items-center gap-2 mb-4">
                    <div class="w-2 h-2 bg-[#7c3aed] rounded-full"></div>
                    <h3 class="font-roboto-mono text-sm font-bold text-white uppercase tracking-wide">Professional Impact</h3>
                </div>
                
                <div class="space-y-4">
                    <div class="flex items-start gap-3 p-4 bg-gray-900/20 rounded-lg">
                        <div class="w-1.5 h-1.5 bg-[#8b5cf6] rounded-full mt-2 flex-shrink-0"></div>
                        <div>
                            <p class="font-roboto-mono text-xs font-semibold text-[#8b5cf6]">Enterprise System Integration</p>
                            <p class="font-roboto-mono text-xs text-gray-400 mt-1">Successfully integrated offline-first mobile apps with legacy ERP systems, enabling real-time data synchronization for 500+ field users</p>
                        </div>
                    </div>
                    
                    <div class="flex items-start gap-3 p-4 bg-gray-900/20 rounded-lg">
                        <div class="w-1.5 h-1.5 bg-[#7c3aed] rounded-full mt-2 flex-shrink-0"></div>
                        <div>
                            <p class="font-roboto-mono text-xs font-semibold text-[#7c3aed]">Performance Optimization</p>
                            <p class="font-roboto-mono text-xs text-gray-400 mt-1">Reduced application load times by 60% through code splitting, lazy loading, and database query optimization techniques</p>
                        </div>
                    </div>
                    
                    <div class="flex items-start gap-3 p-4 bg-gray-900/20 rounded-lg">
                        <div class="w-1.5 h-1.5 bg-[#5b21b6] rounded-full mt-2 flex-shrink-0"></div>
                        <div>
                            <p class="font-roboto-mono text-xs font-semibold text-[#5b21b6]">Cross-Functional Leadership</p>
                            <p class="font-roboto-mono text-xs text-gray-400 mt-1">Led technical discussions with product managers and designers, translating business requirements into scalable technical solutions</p>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
</section>



<style>

    .font-ibrand {
        font-family: "Ibrand", var(--font-sans);
        font-weight: 500;
    }

    .font-sink {
        font-family: "Sink", var(--font-sans);
    }
</style>
