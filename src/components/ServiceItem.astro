---
export interface Props {
  icon: string;
  label: string;
}

const { icon, label } = Astro.props;
---


<div class="flex flex-col items-center cursor-pointer transition-transform duration-200 hover:-translate-y-0.5">
  <div class="w-12 h-12 mb-2 flex items-center justify-center">
    <svg
      class="w-8 h-8 text-white"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
      set:html={icon}
    >
    </svg>
  </div>
  <span class="text-center font-sink text-sm text-white">{label}</span>
</div>
