<header class="fixed top-0 left-0 right-0 z-[1000] px-4 py-2.5 md:px-6 md:py-2.5 w-full font-sink">
  <nav class="w-full mx-auto flex justify-center relative">
    <div class="flex items-center justify-between md:justify-center gap-3.5 px-3.5 py-2 md:px-4 md:py-2 w-full max-w-max md:w-max bg-white/[0.06] border border-white/[0.12] rounded-[14px] shadow-[0_2px_10px_rgba(0,0,0,0.2)] backdrop-blur-[6px]">
      <!-- Mobile Menu Button -->
      <button class="md:hidden flex flex-col justify-center items-center w-[30px] h-[30px] bg-transparent border-none cursor-pointer p-0 gap-1 group" aria-label="Toggle mobile menu" aria-expanded="false" id="mobile-menu-btn">
        <span class="w-5 h-0.5 bg-white rounded-[1px] transition-all duration-300 group-[.menu-open]:rotate-45 group-[.menu-open]:translate-x-1.5 group-[.menu-open]:translate-y-1.5"></span>
        <span class="w-5 h-0.5 bg-white rounded-[1px] transition-all duration-300 group-[.menu-open]:opacity-0"></span>
        <span class="w-5 h-0.5 bg-white rounded-[1px] transition-all duration-300 group-[.menu-open]:-rotate-45 group-[.menu-open]:translate-x-1.5 group-[.menu-open]:-translate-y-1.5"></span>
      </button>

      <!-- Desktop Menu -->
      <ul class="hidden md:flex gap-5 list-none m-0 px-1">
        <li><a href="#about" data-section="about" class="nav-link text-white no-underline font-sink font-[550] tracking-[0.6px] transition-colors duration-300 hover:text-[#8b5cf6]">About</a></li>
        <li><a href="#experience" data-section="experience" class="nav-link text-white no-underline font-sink font-[550] tracking-[0.6px] transition-colors duration-300 hover:text-[#8b5cf6]">Experience</a></li>
        <li><a href="#projects" data-section="projects" class="nav-link text-white no-underline font-sink font-[550] tracking-[0.6px] transition-colors duration-300 hover:text-[#8b5cf6]">Featured Projects</a></li>
      </ul>

      <!-- Actions -->
      <div class="flex items-center gap-2.5 md:gap-2.5">
        <div class="inline-grid grid-flow-col items-center gap-1 px-1 py-0.5 md:px-1.5 md:py-0.5 border border-white/[0.18] bg-black/25 rounded-xl" role="group" aria-label="Language">
          <span class="lang-option active text-[#0f0f10] font-sink font-medium text-[10px] md:text-[11px] leading-none px-1.5 py-1 md:px-2.5 md:py-1.5 rounded-lg transition-all duration-300 bg-[#e6e6e6]">EN</span>
          <span class="lang-option text-[#cfcfcf] font-sink font-medium text-[10px] md:text-[11px] leading-none px-1.5 py-1 md:px-2.5 md:py-1.5 rounded-lg transition-all duration-300">SP</span>
        </div>
        <a class="inline-flex items-center justify-center w-[30px] h-[30px] md:w-[34px] md:h-[34px] text-[#e6e6e6] border border-white/20 rounded-[10px] bg-black/25 no-underline transition-all duration-300 hover:text-white hover:border-white/35" href="https://github.com/" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
          <svg viewBox="0 0 24 24" width="16" height="16" class="md:w-[18px] md:h-[18px]" aria-hidden="true" fill="currentColor">
